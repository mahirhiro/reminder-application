<?xml version="1.0" encoding="UTF-8"?>
<project name="module_reminder-application" default="compile.module.reminder-application">
    <dirname property="module.reminder-application.basedir" file="${ant.file.module_reminder-application}"/>

    <property name="module.jdk.home.reminder-application" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.reminder-application" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.reminder-application" value="${project.jdk.classpath}"/>

    <property name="compiler.args.reminder-application" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>

    <property name="reminder-application.output.dir"
              value="${module.reminder-application.basedir}/out/production/reminder-application"/>
    <property name="reminder-application.testoutput.dir"
              value="${module.reminder-application.basedir}/out/test/reminder-application"/>

    <path id="reminder-application.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="reminder-application.module.production.classpath">
        <path refid="${module.jdk.classpath.reminder-application}"/>
        <path refid="library.jcalendar-1.4.classpath"/>
        <path refid="library.jcalendar-1.41.classpath"/>
    </path>

    <path id="reminder-application.runtime.production.module.classpath">
        <pathelement location="${reminder-application.output.dir}"/>
        <path refid="library.jcalendar-1.4.classpath"/>
        <path refid="library.jcalendar-1.41.classpath"/>
    </path>

    <path id="reminder-application.module.classpath">
        <path refid="${module.jdk.classpath.reminder-application}"/>
        <pathelement location="${reminder-application.output.dir}"/>
        <path refid="library.jcalendar-1.4.classpath"/>
        <path refid="library.jcalendar-1.41.classpath"/>
    </path>

    <path id="reminder-application.runtime.module.classpath">
        <pathelement location="${reminder-application.testoutput.dir}"/>
        <pathelement location="${reminder-application.output.dir}"/>
        <path refid="library.jcalendar-1.4.classpath"/>
        <path refid="library.jcalendar-1.41.classpath"/>
    </path>


    <patternset id="excluded.from.module.reminder-application">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.reminder-application">
        <patternset refid="excluded.from.module.reminder-application"/>
    </patternset>

    <path id="reminder-application.module.sourcepath">
        <dirset dir="${module.reminder-application.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.reminder-application"
            depends="compile.module.reminder-application.production,compile.module.reminder-application.tests"
            description="Compile module reminder-application"/>

    <target name="compile.module.reminder-application.production" depends="register.custom.compilers"
            description="Compile module reminder-application; production classes">
        <mkdir dir="${reminder-application.output.dir}"/>
        <javac2 destdir="${reminder-application.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.reminder-application}/javac">
            <compilerarg line="${compiler.args.reminder-application}"/>
            <bootclasspath refid="reminder-application.module.bootclasspath"/>
            <classpath refid="reminder-application.module.production.classpath"/>
            <src refid="reminder-application.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.reminder-application"/>
        </javac2>

        <copy todir="${reminder-application.output.dir}">
            <fileset dir="${module.reminder-application.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.reminder-application.tests"
            depends="register.custom.compilers,compile.module.reminder-application.production"
            description="compile module reminder-application; test classes" unless="skip.tests"/>

    <target name="clean.module.reminder-application" description="cleanup module">
        <delete dir="${reminder-application.output.dir}"/>
        <delete dir="${reminder-application.testoutput.dir}"/>
    </target>
</project>